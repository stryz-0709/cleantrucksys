<!-- res/drawable/circle_light_on.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Active state -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#CCCCCC" /> <!-- Gray color for "inactive" state -->
            <size android:width="100dp" android:height="100dp" /> <!-- Circle size -->
            <stroke
                android:width="5dp"
                android:color="#FFFFFF" /> <!-- Optional border -->
        </shape>
    </item>

    <!-- Default/inactive state -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#CCCCCC" /> <!-- Gray color for "inactive" state -->
            <size android:width="100dp" android:height="100dp" /> <!-- Circle size -->
            <stroke
                android:width="5dp"
                android:color="#FFFFFF" /> <!-- Optional border -->
        </shape>
    </item>
</selector>