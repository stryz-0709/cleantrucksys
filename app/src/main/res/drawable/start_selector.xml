<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- "On" State -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%p"
                android:startColor="#FFFFFF"
            android:endColor="#00FF7F"
            android:centerColor="#00FF7F"
            android:useLevel="false" />
            <size android:width="100dp" android:height="100dp" />
            <stroke
                android:width="5dp"
                android:color="#006600" />
        </shape>
    </item>

    <!-- "Off" State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#378176" /> <!-- Gray color for "off" state -->
            <size android:width="100dp" android:height="100dp" /> <!-- Circle size -->
            <stroke
                android:width="5dp"
                android:color="#000000" /> <!-- Optional border color -->
        </shape>
    </item>
</selector>