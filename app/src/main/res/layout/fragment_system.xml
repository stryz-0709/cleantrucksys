                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:text="MÁY NÉN KHÍ"
                android:textColor="#000000"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center" />

            <ToggleButton
                android:id="@+id/comp_light"
                android:layout_toEndOf="@id/sys1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/sys2"
                android:layout_below="@id/sys1"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:text="BƠM LỌC"
                android:textColor="#000000"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_gravity="center" />

            <ToggleButton
                android:id="@+id/sys2_light"
                android:layout_below="@id/sys1"
                android:layout_toEndOf="@id/sys2"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:layout_gravity="center" />

            <ToggleButton
                android:id="@+id/valve5_light"
                android:layout_below="@id/sys1"
                android:layout_toEndOf="@id/sys2"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:textOff=""
                android:textOn=""
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circle_light_selector"
