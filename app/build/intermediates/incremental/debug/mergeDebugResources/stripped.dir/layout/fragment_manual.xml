<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0080c0"
    android:theme="@style/ThemeOverlay.HMI.FullscreenContainer"
    tools:context=".ManualFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manual_title"
        android:paddingTop="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điều chỉnh bằng tay"
            android:textStyle="bold"
            android:textColor="@color/White"
            android:textSize="@dimen/_20sdp"
            android:textAlignment="center"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manual_title">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_415sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/manual"
                android:contentDescription="@string/manual" />

            <ToggleButton
                android:id="@+id/oil_button"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_86sdp"
                android:layout_marginTop="@dimen/_73sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/vacuum_button"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_214sdp"
                android:layout_marginTop="@dimen/_73sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve3_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_195sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve6_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_232sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/water_button"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_292sdp"
                android:layout_marginTop="@dimen/_73sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve11_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_272sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve8_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_311sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve1_button"
                android:layout_width="@dimen/_22ssp"
                android:layout_height="@dimen/_22ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_370sdp"
                android:layout_marginTop="@dimen/_73sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve4_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_349sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ToggleButton
                android:id="@+id/valve9_button"
                android:layout_width="@dimen/_25ssp"
                android:layout_height="@dimen/_25ssp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_385sdp"
                android:layout_marginTop="@dimen/_178sdp"
                android:background="@drawable/circle_light_selector"
                android:checked="false"
                android:textOff=""
                android:textOn=""
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/homeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30ssp"
        android:background="@drawable/button_background"
        android:layout_marginEnd="@dimen/_8ssp"
        android:layout_marginBottom="@dimen/_8ssp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:background="@drawable/home"
            android:layout_centerInParent="true"/>

    </RelativeLayout>


</RelativeLayout>

</FrameLayout>